<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--设置统一背景色，如果设为null，则每个activity最外层布局必须设置background，否则进入未设置background的activity后再进入设置了background的activity将看到显示异常-->
        <item name="android:windowBackground">@color/little_grey</item>
        <!-- <item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/logo_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="vertical_divider_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="margin_divider_style" parent="divider_style">
        <item name="android:layout_marginLeft">@dimen/main_margin</item>
        <item name="android:layout_marginRight">@dimen/main_margin</item>
    </style>

    <style name="radio_left_style">
        <item name="android:background">@drawable/radio_left_bg_selector</item>
        <item name="android:textColor">@drawable/radio_txt_color_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radio_right_style">
        <item name="android:background">@drawable/radio_right_bg_selector</item>
        <item name="android:textColor">@drawable/radio_txt_color_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_big_dark_grey">
        <item name="android:textSize">@dimen/size_big</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="text_middle_dark_grey">
        <item name="android:textSize">@dimen/size_middle</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="text_middle_light_grey">
        <item name="android:textSize">@dimen/size_middle</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="text_small_dark_grey">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="text_small_light_grey">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="item_label_style" parent="text_middle_dark_grey">
        <item name="android:layout_height">@dimen/label_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
