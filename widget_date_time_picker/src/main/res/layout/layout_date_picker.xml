<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="15dp"
            android:text="取消"
            android:textColor="@color/picker_color_default"
            android:textSize="@dimen/picker_text_default" />

        <TextView
            android:id="@+id/resultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/picker_color_default"
            android:textSize="@dimen/picker_text_default" />

        <TextView
            android:id="@+id/perform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:text="确定"
            android:textColor="@color/picker_color_theme"
            android:textSize="@dimen/picker_text_default" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.chichiangho.widget_date_time_picker.OptimizedNumberPicker
            android:id="@+id/yearPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:visibility="gone"
            app:DividerColor="@color/picker_color_theme"
            app:HintText="年"
            app:ItemPaddingVertical="10dp"
            app:TextColorHint="@color/picker_color_theme"
            app:TextColorSelected="@color/picker_color_theme"
            app:TextSizeHint="@dimen/picker_text_default"
            app:TextSizeNormal="@dimen/picker_text_default"
            app:TextSizeSelected="@dimen/picker_text_default" />

        <com.chichiangho.widget_date_time_picker.OptimizedNumberPicker
            android:id="@+id/monthPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:DividerColor="@color/picker_color_theme"
            app:HintText="月"
            app:ItemPaddingVertical="10dp"
            app:TextColorHint="@color/picker_color_theme"
            app:TextColorSelected="@color/picker_color_theme"
            app:TextSizeHint="@dimen/picker_text_default"
            app:TextSizeNormal="@dimen/picker_text_default"
            app:TextSizeSelected="@dimen/picker_text_default" />

        <com.chichiangho.widget_date_time_picker.OptimizedNumberPicker
            android:id="@+id/dayPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:DividerColor="@color/picker_color_theme"
            app:HintText="日"
            app:ItemPaddingVertical="10dp"
            app:TextColorHint="@color/picker_color_theme"
            app:TextColorSelected="@color/picker_color_theme"
            app:TextSizeHint="@dimen/picker_text_default"
            app:TextSizeNormal="@dimen/picker_text_default"
            app:TextSizeSelected="@dimen/picker_text_default" />

        <com.chichiangho.widget_date_time_picker.OptimizedNumberPicker
            android:id="@+id/hourPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:DividerColor="@color/picker_color_theme"
            app:HintText="时"
            app:ItemPaddingVertical="10dp"
            app:TextColorHint="@color/picker_color_theme"
            app:TextColorSelected="@color/picker_color_theme"
            app:TextSizeHint="@dimen/picker_text_default"
            app:TextSizeNormal="@dimen/picker_text_default"
            app:TextSizeSelected="@dimen/picker_text_default" />

        <com.chichiangho.widget_date_time_picker.OptimizedNumberPicker
            android:id="@+id/minutePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:DividerColor="@color/picker_color_theme"
            app:HintText="分"
            app:ItemPaddingVertical="10dp"
            app:TextColorHint="@color/picker_color_theme"
            app:TextColorSelected="@color/picker_color_theme"
            app:TextSizeHint="@dimen/picker_text_default"
            app:TextSizeNormal="@dimen/picker_text_default"
            app:TextSizeSelected="@dimen/picker_text_default" />
    </LinearLayout>
</LinearLayout>